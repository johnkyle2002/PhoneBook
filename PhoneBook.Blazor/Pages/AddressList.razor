@page "/addresslist"

<div class="card">
    <div class="card-header">Address Book List</div>
    <div class="card-body">

        @if (AddressBooks.Any())
        {
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th width="250">Phone</th>
                        <th>Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in AddressBooks)
                    {
                        <tr>
                            <td>@item.PhoneNo</td>
                            <td>@item.Name</td>
                            <td></td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        else
        {
            <p class="text-muted">No Address book identified.</p>
        }
    </div>
</div>